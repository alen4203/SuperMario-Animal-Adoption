<% include header.ejs %>
<div class="container mar-bom">
    <h1 class="text-center bold" onclick="window.location.href='/back'">SuperMario Animal Adoption</h1>
    <% for(var i in animals){ %>
        <div class="row">
            <h2 class="text-center bold">Information of "<%= animals[i].name %>" </h2>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-3 col-sm-offset-3 col-md-3 col-md-offset-3">
                <img src="../<%= animals[i].image %>" alt="<%= animals[i].name %>" style="max-width: 100%;"/>
            </div>
            <div class="col-xs-12 col-sm-5 col-md-6">
                <div id="dlInfo">
                    <dl class="dl-horizontal">
                        <dt>Animal Name:</dt>
                        <dd><%= animals[i].name %></dd>
                        <dt>Animal Type:</dt>
                        <dd><%= animals[i].type %></dd>
                        <dt>Animal Gender:</dt>
                        <dd><%= animals[i].gender %></dd>
                        <dt>Animal Colour:</dt>
                        <dd><%= animals[i].color %></dd>
                        <dt>Location:</dt>
                        <dd><%= animals[i].location %></dd>
                        <dt>Introduction:</dt>
                        <dd><%= animals[i].introduction %></dd>
                    </dl>
                </div>
            </div>
        </div>
    <% } %>
    <div id="divApply" class="row">
        <div>
            <% if(animals[i].status == 0){ %>
                <button class="btn btn-warning btn-lg" type="button" style="display:block;margin:0 auto"
                        onclick="window.location.href=`<%= id %>/apply`">Apply Now!
                </button>
            <% }else { %>
                <button class="btn btn-primary btn-lg" type="button " style="display:block;margin:0 auto">Adopted
                </button>
            <% } %>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4 col-sm-offset-2 col-md-4 col-md-offset-3">
            <label id="inputComment">Comment</label>
            <ul id="comments">
                <!-- Comments here -->
                <% for(var index in comments){ %>
                    <li><%= comments[index].user %>: <%= comments[index].content %></li>
                <% } %>
            </ul>
        </div>

    </div>

    <form class="form-horizontal" onsubmit="commentsSubmit(`<%= animals[i]._id %>`)">
        <div class="row">
            <div class="form-group">
                <div class="col-xs-9 col-xs-offset-1 col-sm-9 col-sm-offset-3 col-sm-6 col-md-offset-3">
                <textarea class="form-control" id="content" rows="4"
                          name="content" placeholder="Say something..." required="true"></textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="col-xs-6 col-xs-offset-6 col-sm-12 col-sm-offset-7">
                    <button class="btn btn-success" type="submit">Send</button>
                    <button class="btn btn-info" type="reset" onclick="function returnPreviousPage() {window.history.back();}returnPreviousPage()">Back</button>
                </div>
            </div>
        </div>

    </form>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<script src="../javascripts/comments.js"></script>

<% include footer.ejs %>
